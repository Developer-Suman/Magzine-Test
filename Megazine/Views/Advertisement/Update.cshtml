@model Advertisement;
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout1.cshtml";
}

<form method="Post" enctype="multipart/form-data" asp-action="Update" asp-controller="Advertisement">
    
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-2">
            </div>
            <div class="col-md-8">
                <div style="background-color:#2BA9AF;">
                    <h1 class="update-header">Update Advertisement Data</h1>
                </div>
     

                <div class="row">
                    <div class="col-md-3">
                        @Html.DisplayNameFor(model=>Model.OwenerName)
                    </div>
                    <div class="col-md-9">
                        <input asp-for="OwenerName" class="form-control" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        @Html.DisplayNameFor(model=>Model.CreatedDate)
                    </div>
                    <div class="col-md-9">
                        @*@Html.DisplayFor(model=>model.CreatedDate)*@
                        <input asp-for="CreatedDate" class="form-control" />

                    </div>
                </div>


                <div class="row">
                    <div class="col-md-3">
                        @Html.DisplayNameFor(model=>Model.Amount)
                    </div>
                    <div class="col-md-9">
                        <input asp-for="Amount" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        @Html.DisplayNameFor(model=>Model.advertiseImageFile)
                    </div>
                    <div class="col-md-9">
                        @Html.DisplayFor(model=>Model.advertiseImage)
                        <input asp-for="advertiseImageFile" class="form-control" />
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-md-2">
                        <input type="submit" value="UPDATE" asp-action="Update" class="btn btn-primary" />
                    </div>
                    <div class="col-md-10">
                        <a asp-action="Index" asp-controller="Advertisement" class="btn btn-danger">BACK TO INDEX</a>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
            </div>
        </div>
    </div>
</form>


