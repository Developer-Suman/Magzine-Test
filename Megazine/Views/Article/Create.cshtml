

@model Megazine.Models.ArticleSecond;
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout1.cshtml";
}


<div class="add-form">
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-2">

            </div>
            <div class="col-md-7 ">
                <div style="background-color:#2BA9AF;">
                    <h1 class="update-header">Add Your Articles</h1>
                </div>
                <form asp-action="Create">
                    <div class="row">
                        <div class="col-md-2">
                            <label asp-for="Title"></label>
                        </div>
                        <div class="col-md-10">
                           <input asp-for="Title" class="form-control" />
                        </div>
                    </div>

                    <div class="row">
                         <div class="col-md-2">
                            <label asp-for="Description"></label>
                        </div>
                        <div class="col-md-10">
                            <input asp-for="Description" class="form-control" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-2">
                            <label asp-for="Author"></label>
                        </div>
                        <div class="col-md-10">
                            <input asp-for="Author" class="form-control" />
                        </div>
                    </div>

                    <div class="button-part mt-4">
                        <div class="row">
                            <div class="col-md-3">
                                <input type="submit" value="ADD ARTICLCLES" class="btn btn-primary" />
                                
                            </div>
                            <div class="col-md-9">
                                <a asp-action="Index" asp-controller="Article" class="btn btn-danger">BACK TO ADMIN</a>
                                
                               
                            </div>
                        </div>
                        
                    </div>
                    

                </form>
            </div>
            <div class="col-md-3">
            </div>
        </div>
    </div>
</div>

