

@model dynamic

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

       

    <div class="container mt-2">
        <div class="row">
        


        @foreach (Journal recentjournal in Model.recentJournal)
        {

            <div class="col-md-7 " style="background-color:azure;">
                    <div class="journals">
                    <img src="~/Files/@recentjournal.JournalImage" height="580px" width="100%">
                    <h2 class="heading-titles" >@recentjournal.Title</h2>
                   @* <h2 class="author mt-5"><i class="fa-solid fa-user"></i> &nbsp @recentjournal.Author</h2>
                    <h2 class="author"><i class="fa-solid fa-clock"></i> &nbsp @recentjournal.TimeAgo</h2>*@

                    </div>

             </div>

        }




        
            <div class="col-md-5">
               
                    @foreach (Journal Journalhalf_Item in Model.recent_Journalhalf)
        {

                    <div class="row">
                        <div class="col-md-12">
                            <p class="article">
                                <img src="~/Files/@Journalhalf_Item.JournalImage" height="280px" width="100%">
                           
                            </p>
                        </div>
                    </div>
                }
    
              

            </div>
       


                
               
                
            
            
            
        


            


        </div>
    </div>



        
    <div class="container mt-5">

    <div class="row" style="background-color:azure;">
        <h2 class="section-title">RECOMMENDED JOURNAL</h2>
        
        @foreach (Journal journal in Model.Journals)
        {
            <div class="col-md-4">
                <div class="journal">
                    <img src="~/Files/@journal.JournalImage" height="300px" width="100%">
                </div>
                <p class="article">
                    <div class="news-title">

                        <h2 class="heading-title" style="font-weight:bold;">@journal.Title</h2>

                    </div>
                   @* @journal.Description*@
                </p>
               @* <h2 class="author mt-5">By:@journal.Author</h2>
                <h2 class="author">Time: 5 hors ago</h2>*@
            </div>

            
        }



                
        </div>
    </div>
        



    





    <div class=" container ad-banner mt-5">

        @foreach (Advertisement exposeLimitedAd in Model.ExposeAdvertsementLimited)
        {
            if (exposeLimitedAd.CreatedDate > DateTime.Now)
            {
                <div class="banner">
                    <div>
                        <img src="~/Files/@exposeLimitedAd.advertiseImage" height="100px" width="100%">
                    </div>

                </div>
                
            }
            
            
        }
       
        
    </div>




<div class="container mt-5">
    
    <div class="row">
        <h2 class="section-title">NEWS</h2>
        
        <div class="col-md-8">
            


            <div class="row" style="background-color:azure;">

                @foreach (News newsLimit in Model.NewssLimit)
                {
                    <div class="col-md-6">
                        <img src="~/Files/@newsLimit.ImageName" width="400" ,height="450">
                        <h2 class="heading-title" style="font-weight:bold;">@newsLimit.Title</h2>
                        <div class="row mt-3">
                            <div class="col-md-2">
                                <h1 class="category">@newsLimit.Category</h1>
                            </div>
                            <div class="col-md-10">
                                <h3 class="author">@newsLimit.TimeAgo</h3>
                            </div>
                        </div>
                    </div>
                } 

            </div>
        </div>





        <div class="col-md-4">
            <h1 class="recent">RECENT UPDATES</h1>
            <div class="updated-news">


                @foreach (News news in Model.Newss)
                {
                <div class="row mt-3">
                    <div class="col-md-8">
                        <h1 class="category">@news.Category</h1>
                        <h2 class="news-title" style="font-weight:bold;">
                            @news.Title
                        </h2>
                        <h3 class="news-time">@news.TimeAgo</h3>
                    </div>
                    <div class="col-md-4">
                        <div class="updated-img">
                                <img src="~/Files/@news.ImageName" width="100" ,height="150">
                        </div>

                    </div>
                </div>

                } 

            </div>
        </div>





    </div>









    <div class="Container mt-5 mb-5">
        
        <div class="row">
            <h2 class="section-title">ARTICLES</h2>
            
            
                @foreach (ArticleSecond article in Model.Articles)
                {
                <div class="col-md-4 mt-4" style="background-color:azure;">
                    <h3 style="font-weight:bold;">@article.Title</h3>
                    <p>@article.Description</p>
                    <h2 class="author mt-5"><i class="fa-solid fa-user"></i> &nbsp @article.Author</h2>
                    <h2 class="author"><i class="fa-solid fa-clock"></i> &nbsp @article.TimeAgo</h2>
                </div>
                    
                }
                
            <hr class="mt-5" />
        </div>
    </div>

    </div>
</div>


